<h1>Edit song:</h1>
 <form action="/songs/<%=@song.slug%>" method="post">
   <label> Song Name: </label>
   <input type="text" name="song[name]" id="Name" value="<%=@song.name%>">
   <br></br>
   <label>Artist: </label>
   <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>">
   <br></br>
   <label>Select genre(s):</label>
   <% Genre.all.each do |g| %>
   <p> <input type="checkbox" name="song[genre_ids][]" value="<%= g.id %>" id="<%= g.name %>" <%= 'checked' if @song.genres.include?(g)%>>
     <label><%= g.name %></label></p>
     <% end %>

   <p><input type="submit" value="Save"></p>
 </form>

   <label>Select genre(s):</label>
   <%Genre.all.each do |genre|%>
   <input id="<%=genre.name%>" type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>"><%=genre.name%></input>
   <%end%>
   <br></br>
   <label>Artist Name:</label>
   <input type="text" name="artist[name]" id="Artist Name"></input>
   <br></br>
   <input type="submit" value="Create Song">
 </form>
