<h1>Edit song:</h1>
 <form action="/songs/<%= @song.slug %>" method="post">

<p><label>Name: </label>
<input type="text" name="song[name]" id="Name" value="<%= @song.name %>"></p>
<p><label>Artist: </label>
   <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>"></p>

   <h3>Select genre(s)</h3>
   <% Genre.all.each do |g| %>
   <p> <input type="checkbox" name="song[genre_ids][]" value="<%= g.id %>" id="<%= g.name %>" <%= 'checked' if @song.genres.include?(g)%>>
     <label><%= g.name %></label></p>
     <% end %>

   <p><input type="submit" value="Save"></p>
 </form>
